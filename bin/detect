#!/usr/bin/env bash
# bin/detect <build-dir>

if [ -n "$( find $1 -maxdepth 5 -iname project.json )" ]; then
  echo ".NET Core 1.0 or 1.0.1 with project.json" && exit 0
elif [ -n "$( find $1 -maxdepth 5 -iname *.csproj )" ]; then
  echo ".NET Core 1.1 or later with *.csproj" && exit 0
elif [ -n "$(find $1 -maxdepth 5 -iname Startup.cs)" ]; then
  echo "ASP.NET Core" && exit 0
else
  echo "no" && exit 1
fi
